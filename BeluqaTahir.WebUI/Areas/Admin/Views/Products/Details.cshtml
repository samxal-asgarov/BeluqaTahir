

@model Product

@{
    ViewData["Title"] = "Details";
}
<h1 style="text-align:center">Blog Details</h1>


<div class="white_card_body">
    <div class="card-body">
        <div class="form-row">
            <div class="col-4">
                <div class="input-group mb-3">

                    <img width="200" height="200" class="img-fluid" src="~/assets/images/@Model.ImagePati" />


                </div>
            </div>


            <div class="col-8">

                <div class="form-group col-12">
                    <label asp-for="Name" class="control-label"></label>
                    <p class="form-control">@Model.Name</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Price" class="control-label"></label>
                    <p class="form-control textarea ">@Model.Price</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Description" class="control-label"></label>
                    <p class="form-control textarea">@Model.Description</p>
                </div>
                <div class="form-group col-12">
                    <label asp-for="FullName" class="control-label"></label>
                    <p class="form-control textarea">@Model.FullName</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="ShopDescription" class="control-label"></label>
                    <p class="form-control textarea">@Model.ShopDescription</p>
                </div>

                @*<div class="form-group col-12">
                    <label asp-for="ProductTypes" class="control-label"></label>
                    <p class="form-control textarea">@Model.ProductTypes.Name</p>
                </div>*@





            </div>
        </div>
    </div>

</div>



<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-outline-dark" asp-action="Index">Back to List</a>


@section addcss{
    <style>
        p.textarea {
            height: unset;
        }
    </style>
}