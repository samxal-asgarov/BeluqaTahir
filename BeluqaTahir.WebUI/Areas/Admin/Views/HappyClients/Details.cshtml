

@model HappyClients

@{
    ViewData["Title"] = "Details";
}
<h1 style="text-align:center">Blog Details</h1>


<div class="white_card_body">
    <div class="card-body">
        <div class="form-row">
            <div class="col-4">
                <div class="input-group mb-3">

                    <img width="200" height="200" class="img-fluid" src="~/assets/images/@Model.ImagePati" />


                </div>
            </div>


            <div class="col-8">

                <div class="form-group col-12">
                    <label asp-for="FullName" class="control-label"></label>
                    <p class="form-control">@Model.FullName</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Answer" class="control-label"></label>
                    <p class="form-control textarea ">@Model.Answer</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Description" class="control-label"></label>
                    <p class="form-control textarea">@Model.Description</p>
                </div>

            


            </div>
        </div>
    </div>

</div>



<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-outline-dark" asp-action="Index">Back to List</a>

